script(src="/javascripts/profile.js") 
div(class="profile-container bg-white mr-3 d-flex flex-column")
    form(id="form-container" class="d-flex flex-row justify-content-center align-items-center p-3" action="/users/update/image" method="post" enctype="multipart/form-data")
        input(type="file" name="avatar" class="d-none" id="input-avatar")
        img(src=currentUser.avatar class="img-fluid" id="image-profile")
    div(class="d-flex flex-row justify-content-center align-items-center my-3")
        p= `${currentUser.username} (${currentUser.local.email})`
    div(class=" text-center d-flex flex-row justify-content-center align-items-center")
        div(class="flex-fill")
            p
                strong Tweet
                br
                span(class="text-primary")= tweets.length
        
        div(class="flex-fill")
            p
                strong Following
                br
                span(class="text-primary") - 